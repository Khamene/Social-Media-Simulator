<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="forgotPassword3" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.twitter.ForgotPassword3Controller">
    <children>
        <VBox fx:id="forgotPassword3Vbox" layoutX="275.0" layoutY="62.0" prefHeight="330.0" prefWidth="250.0">
            <children>
                <Label alignment="CENTER" prefHeight="45.0" prefWidth="250.0" text="Enter a new password." />
            <PasswordField fx:id="password1" prefHeight="35.0" prefWidth="250.0" promptText="New Password" />
                <Label fx:id="formatInvalid" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="45.0" prefWidth="250.0" />
            <PasswordField fx:id="password2" prefHeight="35.0" prefWidth="250.0" promptText="Confirm password" />
                <Label fx:id="misMatch" prefHeight="69.0" prefWidth="250.0" />
                <Button mnemonicParsing="false" onAction="#finish" prefHeight="34.0" prefWidth="250.0" text="Finish" textFill="WHITE" />
                <Label prefHeight="30.0" prefWidth="250.0" />
                <Button mnemonicParsing="false" onAction="#backTo2" prefHeight="34.0" prefWidth="250.0" text="Back" textFill="WHITE" />
            </children>
        </VBox>
      <HBox layoutX="40.0" layoutY="40.0" prefHeight="40.0" prefWidth="120.0">
         <children>
            <ToggleButton fx:id="lightMode" mnemonicParsing="false" prefHeight="38.0" prefWidth="61.0" selected="true" text="Light">
               <toggleGroup>
                  <ToggleGroup fx:id="themeChoose" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="darkMode" mnemonicParsing="false" prefHeight="38.0" prefWidth="61.0" text="Dark" toggleGroup="$themeChoose" />
         </children>
      </HBox>
    </children>
</AnchorPane>
