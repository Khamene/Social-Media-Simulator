<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="0.0" minWidth="0.0" onMouseClicked="#addFile" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.twitter.CreatePostController">
   <children>
      <TextArea fx:id="textOfPost" layoutX="200.0" layoutY="14.0" prefHeight="127.0" prefWidth="546.0" />
      <Label fx:id="textLbl" layoutX="67.0" layoutY="48.0" prefHeight="18.0" prefWidth="102.0" text="post Text:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="fileLbl" layoutX="14.0" layoutY="217.0" prefHeight="26.0" prefWidth="189.0" text="you can Also attach a file: ">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="dotLbl" layoutX="426.0" layoutY="207.0" prefHeight="18.0" prefWidth="22.0" text="...">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="filePathTxt" layoutX="250.0" layoutY="217.0" promptText="file path" />
      <Label fx:id="textNeed" layoutX="49.0" layoutY="149.0" prefHeight="35.0" prefWidth="343.0" textFill="#e15e5e">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <HBox layoutX="221.0" layoutY="364.0" prefHeight="26.0" prefWidth="150.0">
         <children>
            <Button fx:id="createPost" mnemonicParsing="false" onAction="#createPostProgress" prefHeight="26.0" prefWidth="86.0" text="Create" textFill="#31b772" />
            <Button fx:id="clearAll" mnemonicParsing="false" onAction="#clearAllProgress" prefHeight="26.0" prefWidth="86.0" text="Clear" />
         </children>
      </HBox>
      <Button fx:id="logOutBtn" layoutX="41.0" layoutY="390.0" mnemonicParsing="false" onAction="#logout" prefHeight="26.0" prefWidth="75.0" text="Log Out" textFill="#e72626" />
   </children>
</AnchorPane>
