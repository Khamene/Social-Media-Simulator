<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.twitter.CommentsController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <ScrollPane hbarPolicy="NEVER" prefHeight="350.0" prefWidth="600.0" vbarPolicy="ALWAYS">
              <content>
                <AnchorPane fx:id="accessArea" minHeight="0.0" minWidth="0.0" prefHeight="350.0" prefWidth="600.0" />
              </content>
            </ScrollPane>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="typeField" prefHeight="50.0" prefWidth="550.0" promptText="Type your comment">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
