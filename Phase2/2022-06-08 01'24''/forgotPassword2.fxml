<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="forgotPassword2" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.twitter.ForgotPassword2Controller">
   <children>
      <Label fx:id="forgotPassword2Title" alignment="CENTER" layoutX="196.0" layoutY="23.0" prefHeight="34.0" prefWidth="406.0" text="Answer following question as you have done in create account time." />
      <VBox fx:id="forgotPassword2Vbox" layoutX="275.0" layoutY="62.0" prefHeight="330.0" prefWidth="250.0">
         <children>
            <Label fx:id="question1" alignment="CENTER" prefHeight="45.0" prefWidth="250.0" text="//question 1" />
            <TextField fx:id="answer1" prefHeight="35.0" prefWidth="250.0" promptText="Answer to qeustion 1." />
            <Label fx:id="question2" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="45.0" prefWidth="250.0" text="//question 2" />
            <TextField fx:id="answer2" layoutX="10.0" layoutY="45.0" prefHeight="35.0" prefWidth="250.0" promptText="Answer to qeustion 2." />
            <Label fx:id="status" prefHeight="69.0" prefWidth="250.0" />
            <Button mnemonicParsing="false" onAction="#nextTo3" prefHeight="34.0" prefWidth="250.0" text="Next" textFill="WHITE" />
            <Label prefHeight="30.0" prefWidth="250.0" />
            <Button mnemonicParsing="false" onAction="#backTo1" prefHeight="34.0" prefWidth="250.0" text="Back" textFill="WHITE" />
         </children>
      </VBox>
      <HBox layoutX="30.0" layoutY="30.0" prefHeight="40.0" prefWidth="120.0">
         <children>
            <ToggleButton fx:id="lightMode" mnemonicParsing="false" prefHeight="38.0" prefWidth="61.0" selected="true" text="Light">
               <toggleGroup>
                  <ToggleGroup fx:id="themeChoose" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="darkMode" mnemonicParsing="false" prefHeight="38.0" prefWidth="61.0" text="Dark" toggleGroup="$themeChoose" />
         </children>
      </HBox>
   </children>
</AnchorPane>
