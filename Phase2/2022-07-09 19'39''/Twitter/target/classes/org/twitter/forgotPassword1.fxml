<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="forgotPassword1" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.twitter.ForgotPassword1Controller">
   <children>
      <VBox fx:id="forgotPassword1Vbox" layoutX="275.0" layoutY="75.0" prefHeight="300.0" prefWidth="250.0">
         <children>
            <Label id="title" alignment="TOP_CENTER" prefHeight="77.0" prefWidth="250.0" text="Please enter your uername." />
            <TextField fx:id="username" prefHeight="35.0" prefWidth="250.0" promptText="Username" />
            <Label fx:id="status" prefHeight="78.0" prefWidth="250.0" />
            <Button mnemonicParsing="false" onAction="#nextTo2" prefHeight="34.0" prefWidth="250.0" text="Next" textFill="WHITE" />
            <Label layoutX="10.0" layoutY="120.0" prefHeight="30.0" prefWidth="250.0" />
            <Button layoutX="10.0" layoutY="153.0" mnemonicParsing="false" onAction="#backToLogin" prefHeight="34.0" prefWidth="250.0" text="Back" textFill="WHITE" />
         </children>
      </VBox>
      <HBox layoutX="30.0" layoutY="30.0" prefHeight="40.0" prefWidth="120.0">
         <children>
            <ToggleButton fx:id="lightMode" mnemonicParsing="false" prefHeight="38.0" prefWidth="61.0" selected="true" text="Light">
               <toggleGroup>
                  <ToggleGroup fx:id="themeChoose" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="darkMode" mnemonicParsing="false" prefHeight="38.0" prefWidth="61.0" text="Dark" toggleGroup="$themeChoose" />
         </children>
      </HBox>
   </children>
</AnchorPane>
